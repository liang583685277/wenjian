/* pages/myworkorder/order.wxss */
@import "../../css/base.wxss";
.header{
  position: relative;
  width: 100%;
  padding-bottom: 30rpx;
  text-align: center;
  color: white;
  background-color: #16C39A;
  z-index: 1;
}
.navleft{
  position: absolute;left: 20rpx;top: 0;
  width: 60rpx;
  height: 60rpx;
  z-index: 99;
}
.icon-saoyisao{
  font-size: 50rpx;
  color: white;
}
.navright{
  position: absolute;
  top: -10rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  font-size: 60rpx;
  color: white;
}
.body{
  width: 100%;
}
page{background-color:#edf0f3;}
.nav{
  display:flex;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
  flex-direction:row;
  color:#989898;
  font-size:30rpx;
  border-bottom:1px solid gainsboro;
}
.default{
  flex:3;
}
.red{
  line-height:100rpx;
  text-align:center;
  color:#16C39A;
  flex:3;
  border-bottom:2px solid #16C39A;
  font-size:30rpx;
}
.saixuan{
  flex: 1.5;
}
.show{
  display:block;
  padding: 20rpx;
  box-sizing: border-box;
}
.show1{
  display: block;
}
.hidden{display:none;text-align:center;line-height:200px;}
.ploperation{
  float: right;
  width: 160rpx;
  font-size: 24rpx;
  color: white;
  background-color: #16C39A;
}
.section__title{
  width: 100%;
}
.section__title::after{
  content: '';
  clear: both;
}
.cencle{
  float: right;
  margin-right: 20rpx;
  background-color: #DD433F;
}
checkbox-group{
  display: inline-block;
}
.checkbox{
  font-size: 26rpx;
  color: #989898;
}